# Entrypoint is not needed since the `run` section handles the command
#entrypoint = "README.md"

modules = ["python-3.12"] 

[run]
command = "streamlit run streamlit_app.py"
args = ["--server.port", "8501"] 

# Optional: Configure the port if needed

# Install dependencies on startup
onstart = "pip install -r requirements.txt"

[gitHubImport]
requiredFiles = [".replit"]

[deployment]
# Simplified deployment command
run = ["streamlit", "run", "streamlit_app.py"]
deploymentTarget = "cloudrun"
[[ports]]
localPort = 8501
externalPort = 80